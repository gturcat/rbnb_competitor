
<div class="container">
  <% @flats.each do |flat| %>
  <div class="card-list">
    <div class="flat-photo">
      <%= cl_image_tag(flat.photo, height: 250, width: 350) %>
    </div>
    <div class="flat-content">
      <h4><%= flat.title %></h4>
      <p><%= flat.city %></p>
      <p><%= flat.description%></p>
      <p> <%= flat.price %> $ |
      <span> <%= flat.capacity %> persons</span>
      </p>
      <%= link_to "book", new_flat_booking_path(flat.id) %>
    </div>
<div
  id="map"
  style="width: 80%;
  height: 400px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

  </div>
  <% end %>
</div>
