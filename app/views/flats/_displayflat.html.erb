<div class="container-fluid flex-container">
  <div class="card-list">
    <h1>
    <% if @show_my_flats %>
      My <%= pluralize @flats.size, "flat" %>
    <% else %>
      <%= pluralize @flats.size, "flat" %> match your search</h1>
    <% end %>
    <% @flats.each do |flat| %>
      <div class="flat-card">
        <div class="flat-photo">
          <%= cl_image_tag(flat.photo, width: 250, height: 200) %>
        </div>
        <div class="flat-content">
          <p><strong><%= flat.title %></strong></p>
          <p><%= flat.description%></p>
          <p> <%= flat.price %> $ |
            <%= flat.capacity %> persons |
            <%= link_to "Book Now!", new_flat_booking_path(flat) %>
          </p>
          <% if policy(flat).edit? %>
          <%= link_to "edit flat", edit_flat_path(flat) %> |
          <% end %>
          <% if policy(flat).destroy? %>
          <%= link_to "delete flat", flat_path(flat), method: :delete, data: { confirm: "Are you sure?" } %>
          <% end %>
        </div>
      </div>
    <% end %>
    <br>
    <br>
    <br>
    <% if policy(Flat).new? %>
    <%= link_to "Want to add your flat?" , new_flat_path  %>
    <% end %>
    <br>
    <br>
    <br>
  </div>
  <div
    id="map"
    style="width: 100%;
    height: calc(100vh - 70px);"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</div>
